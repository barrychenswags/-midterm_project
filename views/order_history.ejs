<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
     <link href="https://fonts.googleapis.com/css?family=Amatic+SC|Montserrat&display=swap" rel="stylesheet">
  </head>

  <body>
    <% include ./partials/_header %>
     <div class='container-fluid'>
         <div class='row'>
    <main class = "order-history col-7">
      <section class = "orders-list">
                  <h2 class='is-font-for-orders'>Order History</h2>
                  <% for(var i = 0; i < orderStatus.length; i++){ %>
                    <% if(orderStatus[i].status === 'Completed'||orderStatus[i].status === 'Declined'){ %>
                      <section class="order">
                          <h4 class='is-font-for-orders-id'>Order ID: <%= orderStatus[i].id %></h4>
                          <span class="is-font-for-orders-description">Order Amount: $<%= orderStatus[i].total_price %></span><br>
                          <span class="is-font-for-orders-description">Order Time: <%= orderStatus[i].created_at %></span><br>
                          <span class="is-font-for-orders-description">Order Status: <%= orderStatus[i].status %></span>
                      </section>
                    <% } %>
                  <% } %>
      </section>
    </main>
    <aside class="col">
    <img src="http://cafesantorini.com/wp-content/uploads/2017/02/75.jpg">
    </aside>
    </div>
    </div>
    <% include ./partials/_footer %>
  </body>
</html>
